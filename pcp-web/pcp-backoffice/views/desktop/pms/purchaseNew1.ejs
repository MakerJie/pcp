<%
const ctx = global.config.contextPath + global.config.viewPrefix,
        txt1 = "订货收货管理", txt2 = "外部订货";
let mdiIcon = {};
%>
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../common/meta.ejs %>
    <% include ../common/public.ejs %>
    <link href="<%= global.config.publicPath %>/assets/plugins/bower_components/custom-select/custom-select.min.css"
          rel="stylesheet">
    <style>
        .select2-container--default .select2-selection--single .select2-selection__rendered{
            line-height: 40px;

        }
        .select2-container--default .select2-selection--single{
            border:1px solid #e4e7ea;
            height: 40px;
        }
        .select2-container--default .select2-selection--single .select2-selection__arrow{
            top:8px;
        }
        #matSelectSearch {
            padding: 5px 12px;
        }
    </style>
</head>
<body class="fix-header">
<% include ../common/prload.ejs %>
<div id="wrapper">
    <% include ../common/nav.ejs %>
    <% include ../common/menu.ejs %>
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <% include ../common/breadcrumb.ejs %>
            <div class="white-box">
                <!-- .row -->
                <div class="row">
                    <% include ../common/subMenu.ejs %>
                    <div class="col-lg-10 col-md-9 col-sm-12 col-xs-12 mail_listing">
                        <div class="row">
                            <ul class="nav nav-tabs" role="tablist" id="myTabs">
                                <li role="presentation" class="active">
                                    <a href="#type4" id="tab_user1" idx="1"
                                       aria-controls="type4" role="tab"
                                       data-toggle="tab"><i class="fa fa-plus" aria-hidden="true"></i> 新建外部订货订单</a>
                                </li>
                                <li role="presentation">
                                    <a href="#home4" id="tab_user2" idx="2"
                                       aria-controls="home4" role="tab"
                                       data-toggle="tab"><i class="fa fa-bars" aria-hidden="true"></i> 待提交订单列表<span class="badge" id="unSubmitNum"></span></a>
                                </li>

                            </ul>
                            <div class="tab-content" id="userList">
                                <div class="tab-pane active" id="type4" role="tabpanel">
                                    <div class="row" id="typeList" style="padding: 0.5rem 2rem;">
                                        <div class="row">
                                            <div class="col-md-6" style="display: block;" id="newSupplierDiv">
                                                <div class="form-group">
                                                    <label class="control-label" for="supplyer"><strong>供应商选择</strong></label>
                                                    <div class="controls">
                                                        <select id="supplyer" class="form-control js-example-disabled-results"
                                                                ajaxType="post"
                                                                optionParam='{"endpoint":"038","userId":"<%= userData.userId %>","WERKS":"<%= userData.shopCode.substr(0,4) %>","LGORT":"<%= userData.shopCode.substr(4) %>"}'
                                                                codeField="LIFNR" nameField="NAME_ORG1"
                                                                optionUrl="/api/b131c5660a694b8e8dbb9ae54247af85">
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6" style="display: none;" id="editSupplierDiv">
                                                <div class="form-group">
                                                    <label class="control-label" for="supplyer"><strong>当前选择供应商</strong></label>
                                                    <div class="controls">
                                                        <input type="text" value="" id="selectedSupplier" class="form-control" disabled>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <button type="button" class="btn btn-mini btn-sm btn-inverse" style="margin-top: 27px;" id="matSelectBtn">物料选择</button>
                                            </div>
                                        </div>
                                        <hr style="margin-top: 10px;margin-bottom: 10px;"/>
                                        <div class="row">
                                            <form action="" method="post" id="order-form">
                                                <input type="hidden" name="supplierEmail" id="cosEmail"  value=""/>
                                                <input type="hidden" name="uid" id="hiddenUid" data-value="<%= global.tool.uuid() %>" />
                                                <div class="col-md-8">
                                                    <div id="dataList"></div>
                                                </div>
                                                <div class="col-md-4">

                                                    <div class="box">
                                                        <div class="box-header">
                                                            <h2>采购订单信息</h2>
                                                        </div>
                                                        <div class="box-content">
                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label static-label"><strong>订单金额</strong></label>
                                                                <div class="col-sm-8">
                                                                    <input type="text" disabled  class="form-control" name="totalAmount" id="totalAmount" />
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label static-label"
                                                                       for="deliveryDate"><strong>计划交货</strong></label>
                                                                <div class="col-sm-8">
                                                                    <div class="input-group">
                                                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                                        <input class="form-control date-picker" data-date-format="yyyy-mm-dd" name="deliveryDate">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label static-label"><strong>订入门店</strong></label>
                                                                <div class="col-sm-8">
                                                                    <select class="form-control js-example-disabled-results" id="purchaseShop"
                                                                            name="storeCode"
                                                                            emptyOption="false"
                                                                            style="height: 33px;padding: 0 0.75rem;min-width: 120px;"
                                                                            ajaxType="post"
                                                                            optionParam='{"properties":{"pageSize":1000,"type":"1","code_in":"<%= userData.shops.join(',') %>"}}'
                                                                            optionUrl="/api/445a2ba90204414387ba30a336f016b6">
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row" id="freePurchaseDiv" style="visibility: hidden;">
                                                                <label class="col-sm-3 form-control-label static-label">免费项目</label>
                                                                <div class="col-sm-8">
                                                                    <select class="form-control" id="purchaseFree" name="free"
                                                                            style="height: 33px;padding: 0 0.75rem;min-width: 120px;">
                                                                        <option value="false" selected>否</option>
                                                                        <option value="true">是</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="form-actions" style="margin-top: 2rem;">
                                                                <button type="button" class="btn btn-primary btn-save" data-status="1">保存为草稿</button>
                                                                <button type="button" class="btn btn-inverse btn-save" data-status="2">保存并提交到SAP</button>
                                                            </div>
                                                            <input type="hidden" name="currency" class="form-control"
                                                                   value="CNY">
                                                            <input name="org" class="form-control" value="1000" type="hidden">
                                                            <input name="grp" class="form-control" value="300" type="hidden">
                                                            <input type="hidden" name="id" value="" id="pId" />
                                                            <input type="hidden" name="status" value="1" id="orderStatus"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="home4" role="tabpanel">
                                    <div class="row" id="dataToSap">
                                        <button type="button" class="btn btn-outline green btn_upload"><i class="fa fa-cloud-upload"></i> 提交数据至SAP</button>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div id="orderList"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- .row -->
            </div>
        </div>
        <!-- /.container-fluid -->
        <% include ../common/bottom.ejs %>
    </div>
    <!-- /#page-wrapper -->
</div>

<div class="modal fade" id="matModal" tabindex="-1" role="dialog" aria-labelledby=matModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-primary modal-md" role="document" style="width: 80%;top: 0;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">物料选择</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div style="padding: 5px 0;">
                    <div class="form-group row">
                        <div class="col-md-6">
                            <div class="input-group">
                                <input id="codeInput" class="form-control" placeholder="物料名称模糊搜索" name="code_like" type="text" style="padding: 5px;">
                                <span class="input-group-btn"><button class="btn" type="button" id="matSelectSearch">搜索</button></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="materielSelectDiv" class="fix-height-list"></div>
            </div>
            <div class="modal-footer">
                <div class="text-danger error_message"></div>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-info btn_confirm"> 确认选择 - (<span id="selectedCount" style="color: #d43f3a;font-weight: 700;">0</span>)</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="emailModel" tabindex="-1" role="dialog" aria-labelledby=matModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-primary modal-md" role="document" style="width: 800px;top: 0;right: 15px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">供应商邮件选择</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="max-height: 500px;overflow: auto;">
                <div id="emailList"></div>
            </div>
            <div class="modal-footer">
                <div class="text-danger error_message"></div>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-info confirmEmail"> 确认选择</button>
            </div>
        </div>
    </div>
</div>
<% include ../common/footer.ejs %>
<script src="<%= global.config.publicPath %>/assets/plugins/bower_components/custom-select/custom-select.min.js"></script>
</body>
</html>
