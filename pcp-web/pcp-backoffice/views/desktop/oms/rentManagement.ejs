            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <ul class="nav nav-tabs" role="tablist" id="myTabs">
                            <li role="presentation" class="active">
                                <a href="#home4" id="tab_user2" idx="2"
                                   aria-controls="home4" role="tab"
                                   data-toggle="tab"><i class="fa fa-map-signs"></i>租金模式</a>
                            </li>
                            <li role="presentation">
                                <a href="#profile4" id="tab_user3" idx="3"
                                   aria-controls="profile4" role="tab" data-toggle="tab">
                                    <i class="fa  fa-money" aria-hidden="true"></i> 提成租金
                                </a>
                            </li>
                        </ul>
                        <form id="userForm2">
                            <input type="hidden" class="form-control" name="id" id="typeId">
                            <div class="tab-content"  id="userList">
                                <div class="tab-pane active" id="home4" role="tabpanel" >
                                    <div class="row" id="typeList" style="padding: 1rem 2rem;">
                                        <div class="form-group">
                                            <div class="controls">
                                                <div class="form-group" id="rentModel2">
                                                    <label class="form-control-label">租金模式</label>
                                                    <select class="form-control"
                                                            name="rentModel" id="rentModel">
                                                        <option value="">--请选择--</option>
                                                        <option value="固定月租金">固定月租金</option>
                                                        <option value="固定日租金">固定日租金</option>
                                                    </select>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5">
                                                        <div id="editList" id="meEditList"></div>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <button type="button" class="btn btn-info" id="durationConfirm"> 计算</button>
                                                        <div id="moneyList"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="error_message"></div>
                                </div>
                                <div class="tab-pane" id="profile4" role="tabpanel" >
                                    <div class="row" id="typeList" style="padding: 1rem 2rem;">
                                        <div class="form-group">
                                            <div class="controls">
                                                <div class="form-group" id="commissionRent2">
                                                    <label class="form-control-label">提成租金</label>
                                                    <select class="form-control"
                                                            name="commissionRent" id="commissionRent">
                                                        <option value="">--请选择--</option>
                                                        <option value="含税金额">含税金额</option>
                                                        <option value="不含税金额">不含税金额</option>
                                                    </select>
                                                </div>
                                                    <div class="row">
                                                        <div class="col-md-5" id="meRantList">
                                                            <div id="rantList"></div>
                                                        </div>
                                                        <div class="col-md-7">
                                                            <button type="button" class="btn btn-info" id="durationConfirm2">计算</button>
                                                            <div id="moneyList2"></div>
                                                        </div>
                                                    </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-info  btn_saveRule" id="saveRule">保存
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>





<% include ../common/footer.ejs %>
<script src="<%= global.config.publicPath %>/assets/plugins/bower_components/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
</body>
</html>
