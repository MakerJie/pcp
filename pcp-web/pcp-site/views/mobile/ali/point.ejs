<%
const ctx = global.config.contextPath + global.config.viewPrefix
        , pageName = "积分商城";
let mdiIcon = {};
%>
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../common/meta.ejs %>
    <% include ../common/public.ejs %>
    <style>
        .level-info {
            font-size: 11px;
            position: absolute;
            top: 117px;
            color: #c5a474;
            right: 25px;
            transform: rotate(-2deg);
        }
        .pizza-form-group.point-detail{
            padding: 10px 0 5px 0;
        }
    </style>
</head>
<body class="fix-header">
<div id="wrapper">
    <% include ../common/nav1.ejs %>
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid" style="font-size: 15px;">
            <%
            const Level = ["","蓝卡","金卡","铂金卡","黑卡","员工卡"];
            %>
            <div class="common-box register-box">
                <div style="width: 100%;">
                    <div style="float: left;width: 50%;">
                        <div class="yellow-font">积分余额</div>
                        <div class="yellow-font"><%= userData.totalPoint || 0 %></div>
                        <div class="mall-active">卡等级 <span><%= Level[userData.cardLevel] %></span></div>
                    </div>

                    <div style="float: left;width: 50%;">
                        <div>
                            <img style="width: 145%;"
                                 src="<%= global.config.publicPath %>/page/images/icon/bar_blue.png"/>
                            <span class="level-info">距离升级还差<span id="needPoint" style="font-weight: 700;"></span>消费积分</span>
                        </div>
                    </div>
                </div>
                <div id="pointData">
                <h5>暂无积分记录</h5>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-wrapper -->
</div>
<% include ../common/footer.ejs %>
</body>
</html>
