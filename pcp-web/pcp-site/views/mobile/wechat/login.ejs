<%
const ctx = global.config.contextPath + global.config.viewPrefix
        , pageName = "会员登录";
let mdiIcon = {};
%>
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../common/meta.ejs %>
    <% include ../common/public.ejs %>
    <link rel="stylesheet" href="<%= global.config.publicPath %>/assets/weui/css/weui.min.css">
    <link rel="stylesheet" href="<%= global.config.publicPath %>/assets/weui/css/jquery-weui.min.css">
    <style>
        .weui-picker-modal .picker-item {
            padding: 0 30px;
        }

        .toolbar .title {
            line-height: 1.45rem;
        }

        .logBtn {
            color: #014288;
            padding: 20px;
            opacity: 0.8;
        }
        #getVerify {
            color: #000;
            border: 1px solid;
            background: lightblue;
            float: right;
        }
    </style>
</head>
<body class="fix-header">
<% include ../common/prload.ejs %>
<div id="wrapper">
    <% include ../common/nav.ejs %>
    <% include ../common/menu.ejs %>
    <!-- Page Content -->
    <div id="page-wrapper">
        <img src="<%= global.config.publicPath %>/page/images/icon/icon_bg_left.png" class="icon-register-left"/>
        <img src="<%= global.config.publicPath %>/page/images/icon/icon_bg_right.png" class="icon-register-right"/>

        <div class="container-fluid">
            <div class="login_form" style="margin-top: 30px;padding: 40px;">
                <div>
                    <img style="width: 100%;margin-bottom: 30px;"
                         src="<%= global.config.publicPath %>/page/images/icon/name_blue.png">
                </div>
                <form id="data_form">
                    <input type="hidden" name="openid" value="<%= session.openId %>">
                    <input type="hidden" name="headImg1" value="<%= userData && userData.headimgurl %>">
                    <div>
                        <div class="pizza-form-group">
                            <label>联系手机：</label>
                            <input type="text" name="mobile" id="mobilePhone" placeholder="请输入注册手机号"/>
                        </div>

                        <div class="pizza-form-group">
                            <input type="text" name="password" placeholder="请输入手机验证码" style="widows: 50%;" />
                            <button type="button" class="verify" id="getVerify">获取验证码</button>
                        </div>

                        <button id="btn_login" type="button"
                                class="btn btn-block btn-outline btn-info" style="font-weight: 700;">登&nbsp;&nbsp;&nbsp;&nbsp;录
                        </button>
                        <button id="btn_register" type="button"
                                data-openid="<%= session.openId %>"
                                class="btn btn-block btn-outline btn-info" style="font-weight: 700;">注&nbsp;&nbsp;&nbsp;&nbsp;册
                        </button>
                        <!--<a class="pull-right" id="forgetPass" style="margin-top: 10px;margin-right: 20px">忘记密码</a>-->
                    </div>
                </form>
                <div id="error_message" style="color: red;text-align: center;"></div>
            </div>
        </div>
    </div>
    <!-- /#page-wrapper -->
</div>

<div class="modal fade" id="userInfoModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document" style="top:20%;" >
        <div class="modal-content common-box ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="exampleModalLabel">修改登录密码</h4>
            </div>
            <div class="modal-body">
                <form id="updatePassform">
                    <input type="hidden" name="id" value="<%= userData.id %>">
                    <input type="hidden" name="country" value="CN">
                    <input type="hidden" name="verifyConfirm" value="" id="verifyConfirm1">
                    <div class="register-box" style="padding: 20px;">
                        <div class="pizza-form-group">
                            <label>手机号：</label>
                            <div class="pizza-input">
                                <input type="tel" name="mobile" id="mobileShow"/>
                            </div>
                        </div>

                        <div class="pizza-form-group">
                            <label>验证码：</label>
                            <div class="pizza-input">
                                <input type="text" name="verify" value="">
                            </div>
                            <button type="button" class="verify" id="getVerify1">获取验证码</button>
                        </div>

                        <div class="pizza-form-group">
                            <label>密码设置：</label>
                            <div class="pizza-input">
                                <input placeholder="您的新密码" name="password"/>
                            </div>
                        </div>

                        <div class="pizza-form-group">
                            <label>确认密码：</label>
                            <input type="text" name="confirmPassword" placeholder="确认您的新密码"/>
                        </div>

                        <div class="text-center">
                            <button class="btn btn-pizza btn_save" type="button">确&nbsp;&nbsp;&nbsp;&nbsp;认</button>
                        </div>

                    </div>
                </form>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<% include ../common/footer.ejs %>

<script src="<%= global.config.publicPath %>/assets/weui/js/jquery-weui.min.js"></script>
<script src="<%= global.config.publicPath %>/assets/weui/js/city-picker.min.js"></script>
</body>
</html>
