<%
const ctx = global.config.contextPath + global.config.viewPrefix
        , pageName = "个人信息";
let mdiIcon = {};
%>
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../common/meta.ejs %>
    <% include ../common/public.ejs %>
    <link rel="stylesheet" href="<%= global.config.publicPath %>/assets/weui/css/weui.min.css">
    <link rel="stylesheet" href="<%= global.config.publicPath %>/assets/weui/css/jquery-weui.min.css">
    <style>
        .weui-picker-modal .picker-item {
            padding: 0 30px;
        }

        .toolbar .title {
            line-height: 1.45rem;
        }

        .logBtn {
            color: #014288;
            padding: 20px;
            opacity: 0.8;
        }
    </style>
</head>
<body class="fix-header">
<% include ../common/prload.ejs %>
<div id="wrapper">
    <% include ../common/nav.ejs %>
    <% include ../common/menu.ejs %>
    <!-- Page Content -->
    <div id="page-wrapper">
        <img src="<%= global.config.publicPath %>/page/images/icon/icon_bg_left.png" class="icon-register-left"/>
        <img src="<%= global.config.publicPath %>/page/images/icon/icon_bg_right.png" class="icon-register-right"/>

        <div class="container-fluid">
            <form id="data_form">
                <input type="hidden" name="openid" value="<%= session.openId %>">
                <input type="hidden" name="headImg1" value="<%= userData && userData.headimgurl %>">
                <input type="hidden" name="country" value="CN">
                <input type="hidden" name="code" value="">
                <input type="hidden" name="id" value="">
                <input type="hidden" name="password" value="">
                <input type="hidden" name="sex" value="">
                <input type="hidden" name="cardLevel" value="">
                <input type="hidden" name="crmChannel" value="">
                <input type="hidden" name="cardNo" value="">

                <div class="common-box register-box" style="margin: 15px;padding: 20px;">
                    <div class="pizza-form-group">
                        <label>用户名：</label>
                        <div class="pizza-input">
                            <input placeholder="" name="realName" value=""/>
                        </div>
                    </div>
                    <div class="pizza-form-group">
                        <label>手机号：</label>
                        <div class="pizza-input">
                            <input type="tel" name="mobile" disabled/>
                        </div>
                    </div>
                    <div class="pizza-form-group">
                        <label>性别：</label>
                        <div class="pizza-input">
                            <input type="text" name="sex1" disabled/>
                        </div>
                    </div>
                    <div class="pizza-form-group">
                        <label>生日：</label>
                        <div class="pizza-input">
                            <input type="text" name="bornDay" id="date-input" disabled/>
                        </div>
                    </div>

                    <div class="pizza-form-group">
                        <label>所在城市：</label>
                        <input type="text" id='city-picker' name="address" placeholder="请选择"/>
                    </div>

                    <div class="pizza-form-group" id="hasBabyDiv">
                        <label>育有萌宝：</label>
                        <input name="hasBaby" id="radio3" value="1" type="radio">
                        <label for="radio3"> 是 </label>
                        <input name="hasBaby" id="radio4" value="0" type="radio">
                        <label for="radio4"> 否 </label>
                    </div>

                    <div class="pizza-form-group babyInfo">
                        <label>萌宝性别1：</label>
                        <input name="babySex1" id="radio5" value="1" type="radio">
                        <label for="radio5"> 男 </label>
                        <input name="babySex1" id="radio6" value="2" type="radio">
                        <label for="radio6"> 女 </label>
                    </div>

                    <div class="pizza-form-group babyInfo">
                        <label>萌宝生日1：</label>
                        <input type="text" id="date-input1" name="babyBir1" placeholder="请选择" value=""/>
                    </div>

                    <div class="pizza-form-group babyInfo">
                        <label>萌宝性别2：</label>
                        <input name="babySex2" id="radio7" value="1" type="radio">
                        <label for="radio7"> 男 </label>
                        <input name="babySex2" id="radio8" value="2" type="radio">
                        <label for="radio8"> 女 </label>
                    </div>
                    <div class="pizza-form-group babyInfo">
                        <label>萌宝生日2：</label>
                        <input type="text" id="date-input2" name="babyBir2" placeholder="请选择" value=""/>
                    </div>

                    <div class="pizza-form-group">
                        <label>是否爱品酒：</label>
                        <input name="tasting" id="radio5" value="1" type="radio">
                        <label for="radio5"> 是 </label>
                        <input name="tasting" id="radio6" value="0" type="radio">
                        <label for="radio6"> 否 </label>
                    </div>

                    <div class="pizza-form-group">
                        <label>我想参加：</label>
                        <input class="weui-input" name="wantArea" id="wantArea" type="text" value="" placeholder="请选择一项">
                    </div>

                    <div class="pizza-form-group">
                        <label>菜品偏好：</label>
                        <input class="weui-input" name="preference" id="preference" type="text" value="" placeholder="请选择两项">
                    </div>

                    <div class="pizza-form-group">
                        <label>标签：</label>
                        <input class="weui-input" name="userTag" id="userTag" type="text" value="" placeholder="请选择三项">
                    </div>

                    <div class="text-center">
                        <button class="btn btn-pizza btn_save" type="button">保&nbsp;&nbsp;&nbsp;&nbsp;存</button>
                    </div>

                </div>
            </form>
            <div id="error_message" style="color: red;text-align: center;"></div>
        </div>
    </div>
    <!-- /#page-wrapper -->
</div>

<% include ../common/footer.ejs %>

<script src="<%= global.config.publicPath %>/assets/weui/js/jquery-weui.min.js"></script>
<script src="<%= global.config.publicPath %>/assets/weui/js/city-picker.min.js"></script>
</body>
</html>
