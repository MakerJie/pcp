<%
const ctx = global.config.contextPath + global.config.viewPrefix
        , pageName = "金玉良言";
let mdiIcon = {};
%>
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../common/meta.ejs %>
    <% include ../common/public.ejs %>
    <link rel="stylesheet" href="<%= global.config.publicPath %>/assets/weui/css/weui.min.css">
    <link rel="stylesheet" href="<%= global.config.publicPath %>/assets/weui/css/jquery-weui.min.css">
    <style>
        .weui-picker-modal .picker-item {
            padding: 0 30px;
        }

        .toolbar .title {
            line-height: 1.45rem;
        }

        .logBtn {
            color: #014288;
            padding: 20px;
            opacity: 0.8;
        }
    </style>
</head>
<body class="fix-header">
<% include ../common/prload.ejs %>
<div id="wrapper">
    <% include ../common/nav.ejs %>
    <% include ../common/menu.ejs %>
    <!-- Page Content -->
    <div id="page-wrapper">
        <img src="<%= global.config.publicPath %>/page/images/icon/icon_bg_left.png" class="icon-register-left"/>
        <img src="<%= global.config.publicPath %>/page/images/icon/icon_bg_right.png" class="icon-register-right"/>

        <div class="container-fluid">
            <form id="data_form">
                <input type="hidden" name="name" value="">
                <input type="hidden" name="openid" value="">
                <input type="hidden" name="mobile" value="">
                <div class="common-box register-box" style="margin: 15px;padding: 20px;">
                    <div class="pizza-form-group">
                        <label>消费城市：</label>
                        <div class="pizza-input">
                            <input type="text" id='city-picker' name="address" placeholder="请选择消费城市"/>
                        </div>
                    </div>
                    <div class="pizza-form-group">
                        <label>消费门店：</label>
                        <input type="text"  name="shopName" placeholder="请填写门店"/>
                    </div>

                    <div class="pizza-form-group">
                        <label>意见类型：</label>
                        <div class="pizza-input">
                            <input type="text" id="date-input1" name="viewType" placeholder="请选择意见类型" value=""/>
                        </div>
                    </div>

                    <div class="pizza-form-group">
                        <textarea rows="3" name="viewRemark" style="width: 100%;margin: 0 8px;" placeholder="请描述您的意见与建议"></textarea>
                    </div>

                    <div class="weui-cells weui-cells_form">
                        <div class="weui-cell">
                            <div class="weui-cell__bd">
                                <div class="weui-uploader">
                                    <div class="weui-uploader__hd">
                                        <p class="weui-uploader__title">图片上传</p>
                                    </div>
                                    <div class="weui-uploader__bd">
                                        <ul class="weui-uploader__files" id="weui_uploader_files" style="margin: 0;">
                                        </ul>
                                        <div class="weui-uploader__input-box">
                                            <input name="image" type="hidden" id="media_ids_input"/>
                                            <input id="uploaderInput" class="weui-uploader__input" type="button">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-pizza btn_save" type="button">提&nbsp;&nbsp;&nbsp;&nbsp;交</button>
                    </div>
                </div>
            </form>
            <div id="error_message" style="color: red;text-align: center;"></div>
        </div>
    </div>
    <!-- /#page-wrapper -->
</div>
<div id="pageData"
     data-appid="<%= data.appId %>"
     data-timestamp="<%= data.timestamp %>"
     data-noncestr="<%= data.nonceStr %>"
     data-signature="<%= data.signature %>" ></div>
<script src="http://res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
<% include ../common/footer.ejs %>
<script src="<%= global.config.publicPath %>/assets/weui/js/jquery-weui.min.js"></script>
<script src="<%= global.config.publicPath %>/assets/weui/js/city-picker.min.js"></script>
</body>
</html>
